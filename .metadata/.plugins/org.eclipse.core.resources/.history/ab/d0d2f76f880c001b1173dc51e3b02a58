#                 self.lbl_G.setText("B");
#                 self.lbl_B.setText("R");
    
            print(i);
        

if __name__ == "__main__" :
    app = QApplication(sys.argv)
    myWindow = WindowClass() 
    myWindow.show()
    app.exec_()
    print('main 종료');
    



