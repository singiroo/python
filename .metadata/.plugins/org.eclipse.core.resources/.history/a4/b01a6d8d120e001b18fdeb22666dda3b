import sys
from PyQt5.QtWidgets import *
from PyQt5 import uic

import time

from selenium import webdriver
from selenium.webdriver.chrome.options import Options
from selenium.webdriver.support.wait import WebDriverWait
import cx_Oracle
import os

# time.sleep(3)
# 
# tag_names = browser.find_element_by_css_selector(".rank_top1000_list").find_elements_by_tag_name("li")
# for tag in tag_names:
#     print(tag.text.split("\n"))


form_class = uic.loadUiType("mybtn.ui")[0]

#화면을 띄우는데 사용되는 Class 선언
class WindowClass(QMainWindow, form_class) :
    
    def __init__(self) :
        super().__init__()
        os.putenv('NLS_LANG', '.UTF8')
        self.setupUi(self)

        self.pushButton.clicked.connect(self.getInfo)
        
        options = Options()
        options.headless = False
        self.browser = webdriver.Chrome(executable_path="chromedriver.exe", options=options)
#         self.browser.get("http://localhost/HelloWeb/Hello_Jsp.jsp")
        self.browser.get("https://place.map.kakao.com/9772243")


    def getInfo(self):
        self.browser.switch_to.window(self.browser.window_handles[-1])
        shopName = self.browser.find_element_by_css_selector(".inner_place h2").text
        
#         linkMore = self.browser.find_element_class_name("link_more").find_element_by_tag_name("span")
#         while(linkMore.text == "메뉴 더보기"):
#             linkMore.click()
#             print("더보기")
#         titleTag = self.browser.find_element_by_css_selector("h2.tit_location").text    
        items = self.browser.find_element_by_class_name("list_menu").find_elements_by_tag_name("li")
#         titles = page.find_elements_by_css_selector("._1zr5s")
#         descriptions = page.find_elements_by_css_selector(".xm3d0")
#         priceList = page.find_elements_by_css_selector("._1cQ4a")
        name=""
        price=""
        print(shopName)
        print()
        self.conn = cx_Oracle.connect("KYH/java@localhost:1521/xe")
        self.cursor = self.conn.cursor()
        self.sql = "insert into MYMENU(TITLE, MENU_NAME, MENU_PRICE) values(:1,:2,:3)"
        
        
        for item in items:
            name = item.find_element_by_class_name("loss_word").text
            price = item.find_element_by_class_name("price_menu").text
            print(name)
            print(price)
            data = (shopName,name,price)
            self.cursor.execute(self.sql, data)
        
            
        self.conn.commit()
        self.cursor.close()    
        self.conn.close()
         
    
        
    
       
if __name__ == "__main__" :
    #QApplication : 프로그램을 실행시켜주는 클래스
    app = QApplication(sys.argv) 

    #WindowClass의 인스턴스 생성
    myWindow = WindowClass() 

    #프로그램 화면을 보여주는 코드

    myWindow.show()

    #프로그램을 이벤트루프로 진입시키는(프로그램을 작동시키는) 코드
    app.exec_()
    

    
